@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h1>Список номеров</h1>
    <table class="room-foreach">
        <tr>
            <td><p>Расположение номера</p></td>
            <td><p>Количество мест</p></td>
            <td><p>Стоимость за сутки</p></td>
            <td><p>Дополнительная информация</p></td>
            <td><p>Фото</p></td>
            <td></td>
            <td></td>
        </tr>
        @foreach (var r in ViewBag.Rooms)
        {
        <tr>
            <td><p>@r.Name</p></td>
            <td><p>@r.NumberOfPeople</p></td>
            <td><p>@r.CostPerDay</p></td>
            <td><p>@r.Description</p></td>
            <td><img src="@r.PhotoUrl" /></td>

            <td><p><a href="/Booking/Book/@r.Id">Забронировать</a></p></td>
            <td><p><a href="/Room/Edit/@r.Id">Редактировать</a></p></td>
        </tr>
        }
    </table>
</div>