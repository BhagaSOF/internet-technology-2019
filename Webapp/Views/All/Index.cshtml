@model Webapp.Helpers.PagedData<Webapp.Models.Good>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h1>Список товаров</h1>

    <div id="goods-list">
        @Html.Partial("GoodsList")
    </div>

    @Scripts.Render("~/scripts/jquery-3.3.1.js")
    @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")

    @using (Ajax.BeginForm("GoodsList", new AjaxOptions
    {
        UpdateTargetId = "goods-list",
    }))
    {
        <tfoot>
        <tr>
            <td colspan="7">
                @for (int pageNum = 1; pageNum <= Model.TotalPages; pageNum++)
                {
                    <input type="submit"
                           name="pageNum"
                           value="@pageNum" 
                           class="input-width" />
                }
            </td>
        </tr>
        </tfoot>
    }
</div>